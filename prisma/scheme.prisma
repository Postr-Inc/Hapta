generator client {
  provider = "prisma-client-js"   
}

datasource dv {
    provider =  "sqlite"
    url = env("DATABASE_URL")
}

model Posts {
    id Int @id @default(autoincrement())
    content String
    author  Users  @relation(fields:[id],references: [id])
    created DateTime @default(now())
    updated DateTime @updatedAt
    file String
}

model Users {
    id Int @id @default(autoincrement())

    name String
    email String
    Posts Posts[]

}